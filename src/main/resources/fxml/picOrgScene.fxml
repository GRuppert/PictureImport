<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.NumberAxis?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="BorderPane" prefHeight="800" prefWidth="1200" xmlns:fx="http://javafx.com/fxml" fx:controller="com.nyusziful.Main.PicOrganizesFXML">
    <top>
        <VBox>
            <HBox alignment="CENTER">
                <Button text="Import" onAction="#handleImportButtonAction" fx:id="btnImport" />
                <Button text="Shift" onAction="#handleShiftButtonAction" fx:id="btnShift" />
                <Button text="Meta" onAction="#handleMetaButtonAction" fx:id="btnMeta" />
                <Button text="Rename" onAction="#handleRenameButtonAction" fx:id="btnRename" />
                <Button text="Sort to Directories" onAction="#handleMoveButtonAction" fx:id="btnMove" />
                <Button text="Distribute" onAction="#handleShowButtonAction" fx:id="btnShow" />
                <Button text="Compare" onAction="#handleCompareButtonAction" fx:id="btnCompare" />
                <Button text="List" onAction="#handleListButtonAction" fx:id="btnList" />
            </HBox>
            <HBox>
                <Label minHeight="16" minWidth="69" fx:id="from" />
                <Button text="Set" onAction="#handleFromButtonAction" fx:id="btnFrom" />
            </HBox>
            <HBox>
                <Label minHeight="16" minWidth="69" fx:id="to" />
                <Button text="Set" onAction="#handleToButtonAction" fx:id="btnTo" />
            </HBox>
            <HBox>
                <ComboBox fx:id="TimeZone" onAction="#handleTimeZoneComboBoxAction" />            
                <Button text="All" onAction="#handleAllButtonAction" fx:id="btnAll" />
                <Button text="None" onAction="#handleNoneButtonAction" fx:id="btnNone" />
                <Button text="Invert" onAction="#handleInvertButtonAction" fx:id="btnInvert" />
            </HBox>
        </VBox>
    </top>
    <left>
        <VBox>
            <fx:define>
                <ToggleGroup fx:id="group"/>  
            </fx:define>
            <RadioButton text="Copy" selected="false" toggleGroup="$group"/>
            <RadioButton text="Move" selected="true" toggleGroup="$group"/>
        </VBox>
    </left>
    <center>
        <TabPane>
            <Tab fx:id="tab1"/>
            <Tab fx:id="tab2"/>
            <Tab fx:id="tab3"/>
            <Tab fx:id="tab4"/>
        </TabPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button text="Go" onAction="#handleGoButtonAction" fx:id="btnGo" />
            <Button text="Abort" onAction="#handleAbortButtonAction" fx:id="btnAbort" />
            <Button text="Refresh" onAction="#handleRefreshButtonAction" fx:id="btnRefresh" />
            <ProgressIndicator fx:id="progressIndicator" />
            <Label fx:id="statusLabel" />
            <AreaChart legendVisible="false" prfx:id="ac" prefWidth="300" prefHeight="100" minWidth="300" minHeight="100" maxWidth="300" maxHeight="100"> 
                <xAxis>
                    <NumberAxis fx:id="xAxis" opacity="0" tickLabelsVisible="false" minorTickVisible="false" side="BOTTOM"  lowerBound="0"  upperBound="100.0"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" minorTickVisible="false" autoRanging="true" side="LEFT"/>
                </yAxis>
            </AreaChart>  
        </HBox>        
    </bottom>
</BorderPane>
