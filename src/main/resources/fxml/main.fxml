<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.NumberAxis?>


<BorderPane fx:id="mainPane" xmlns:fx="http://javafx.com/fxml/1" prefHeight="800" prefWidth="1200" fx:controller="org.nyusziful.pictureorganizer.UI.Contoller.MainController">
    <top>
        <VBox>
            <Label text="Functions" alignment="CENTER"/>
            <HBox fx:id="buttonHBox" alignment="CENTER">
                <Button text="Import" onAction="#handleImportButtonAction" fx:id="btnImport" />
                <Button text="Import From Directory" onAction="#handleImportFromButtonAction" fx:id="btnImportFrom" />
                <Button text="Rename" onAction="#handleRenameButtonAction" fx:id="btnRename" />
                <Button text="Rename Rec." onAction="#handleRenameRecursiveButtonAction" fx:id="btnRenameRec" />
                <Separator orientation="VERTICAL"/>
                <Button text="Shift" onAction="#handleShiftButtonAction" fx:id="btnShift" />
                <Button text="Meta" onAction="#handleMetaButtonAction" fx:id="btnMeta" />
                <Separator orientation="VERTICAL"/>
                <Button text="Reorganize Directories" onAction="#handleReorgButtonAction" fx:id="btnReorg" />
                <Button text="Sort to Directories" onAction="#handleMoveButtonAction" fx:id="btnMove" />
                <Button text="Check folder sturcture" onAction="#handleShowButtonAction" fx:id="btnShow" />
                <Separator orientation="VERTICAL"/>
                <Button text="Compare" onAction="#handleCompareButtonAction" fx:id="btnCompare" />
                <Button text="List" onAction="#handleListButtonAction" fx:id="btnList" />
            </HBox>
            <HBox>
                <HBox alignment="CENTER_LEFT">
                    <Label text="From"/>
                    <Label minHeight="16" minWidth="69" fx:id="from" />
                    <Button text="Set" onAction="#handleFromButtonAction" fx:id="btnFrom" />
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <Label text="To"/>
                    <Label minHeight="16" minWidth="69" fx:id="to" />
                    <Button text="Set" onAction="#handleToButtonAction" fx:id="btnTo" />
                </HBox>
            </HBox>
            <HBox>
                <ComboBox fx:id="TimeZone" onAction="#handleTimeZoneComboBoxAction" />            
            </HBox>
        </VBox>
    </top>
    <left>
        <VBox>
            <fx:define>
                <ToggleGroup fx:id="group"/>  
            </fx:define>
            <RadioButton text="Copy" userData="COPY" toggleGroup="$group"/>
            <RadioButton text="Move" userData="MOVE" toggleGroup="$group"/>
        </VBox>
    </left>
    <center>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <ProgressIndicator fx:id="progressIndicator" progress="0"/>
            <Label fx:id="statusLabel" />
            <AreaChart legendVisible="false" fx:id="ac" prefWidth="300" prefHeight="100" minWidth="300" minHeight="100" maxWidth="300" maxHeight="100"> 
                <xAxis>
                    <NumberAxis fx:id="xAxis" opacity="0" tickLabelsVisible="false" minorTickVisible="false" side="BOTTOM"  lowerBound="0"  upperBound="100.0"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" minorTickVisible="false" autoRanging="true" side="LEFT"/>
                </yAxis>
            </AreaChart>  
        </HBox>        
    </bottom>
</BorderPane>
